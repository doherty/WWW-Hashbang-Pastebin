<% lines = content.split("\n") %>
<% BLOCK line_num -%>
<a href="#l<% lineno %>" name="l<% lineno %>"><pre class="lineno"><% lineno %></pre></a>
<% END %>
<% BLOCK line_text -%>
<% text %>
<% END %>

<table>
<tr>
<td>
<% PROCESS line_num lineno=loop.count FOREACH line IN lines %>
</td>
<td>
<pre id="paste"><% PROCESS line_text text=line FOREACH line in lines %></pre>
</td>
</tr>
</table>
